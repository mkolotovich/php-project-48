{
    "name": "hexlet/code",
    "bin": [
        "bin/gendiff"
    ],
    "description": "diff generator",
    "autoload": {
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        },
        "files": [
            "src/gendiff.php",
            "src/readFile.php",
            "src/parser.php",
            "src/makeTree.php",
            "src/Formatters.php",
            "src/Formatters/stylish.php",
            "src/Formatters/plain.php",
            "src/Formatters/json.php"
        ]
    },
    "authors": [
        {
            "name": "Mike Kolotovich"
        }
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^7.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1"
    }
}
